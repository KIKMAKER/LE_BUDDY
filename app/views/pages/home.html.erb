<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/background.png);">
  <div class="container">
   <h1>Welcome to Le Buddy</h1>
    <p>Work through past challenges together.</p>
    </div>
    <div>
     <h2>Find a buddy anywhere in the world!</h2>
    </div>
  </div>
</div>


<div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>

<div class="container mt-4">
  <div class="cards">
    <% @challenges.each do |challenge| %>
      <%= link_to challenge_path(challenge) do %>
        <div class="card-product">
            <%= image_tag(challenge.title) %>
            <div class="card-product-infos">
              <h2> <%= challenge.title %></h2>
              <p> <%= challenge.duration %></p>
              <p> <%= challenge.user.location %></p>
            </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
