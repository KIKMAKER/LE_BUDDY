<div class="container mt-4">
  <div class="cards">
     <% @challenges.each do |challenge| %>
      <%= link_to challenge_path(challenge) do %>
        <% if challenge.photo.attached? %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path challenge.photo.key %>')">
        <% else %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
        <% end %>
          <%= challenge.title %>
          <%= challenge.category %>
          <div >
            <%= link_to "Request to buddy-up on this challenge", new_challenge_booking_path(challenge) %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
