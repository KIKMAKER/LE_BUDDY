
<div class="container">
  <div class="m-4 p-4 justify-content-center card-trip"">
    <h1>The Buddy for this challenge is: <%= @challenge.user.username %></h1>
      <div>
        <% if @challenge.user.avatar.attached? %>
          <%= cl_image_tag @challenge.user.avatar.key, class: "avatar-large" %>
        <% else %>
          <img class = "avatar-large" src="https://kitt.lewagon.com/placeholder/users/<%=@challenge.user.github%>" />
        <% end %>
      </div>
      <br>
      <div>
        <h2><%= @challenge.user.username %>'s Bio:</h2>
          <br>
        <p><%= @challenge.user.bio %><p>
          <br>
          <br>
        <h2>Location:</h2>
          <p> <%= @challenge.user.location %></p>
          <br>
        <h3> <%= @challenge.description %></h3>
      </div>
      <br>
    <div class ="button">
      <%=link_to "Buddy Up", new_challenge_booking_path(@challenge) %>
    </div>
  </div>
</div>
