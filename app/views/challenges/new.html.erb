<h1>Create new challenge:</h1>
<%= simple_form_for @challenge do |f| %>
<%= f.input :title, :label => "Challenge Module Name"%>
<%= f.input :description, :label => "Describe your difficuity with this challenge"%>
<%= f.input :category, :collection => %w[Ruby OOP DB Front Rails],  %>
<%= f.input :duration, :label => "Work on a single Challenge, Full Day of challenges or an entire Module?", :collection => %w[Challenge FullDay Module] %>
<%= f.input :photo, as: :file %>
<%= f.button :submit %>

<% end %>